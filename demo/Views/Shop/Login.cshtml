@{
    ViewBag.Title = "Login";


}
@model demo.Model.User
<div class="header">
    <div class="header-main">
        <h1>LOGIN</h1>
        <div class="header-top">
            <div class="header-right">

                <div class="header-left-top">

                    <form >
                        <input type="text" class="ip-text" value="" name="username" placeholder="username" />
                        @Html.ValidationMessageFor(m => m.Username)
                        <input type="password" class="ip-password" value="" name="password" placeholder="password" />

                        @Html.ValidationMessageFor(m => m.Password)
                        <div class="remember">
                            <span class="checkbox1">
                                <label class="checkbox"><input type="checkbox" name="" checked=""><i> </i>Remember me</label>
                            </span>

                            <div class="forgot">
                                <h6><a href="" onclick="window.open('ForgotPassword', 'FP', 'width=600,height=500,top=130,left=370,fullscreen=no,resizable=0');">Forgot Password?</a></h6>
                            </div>
                            <div class="clear"> </div>
                        </div>
                        <div type="submit" id="login" class="ip-submit" style="text-align:center">Login</div>
                  
                    </form>
                    <div class="header-left-bottom">
                        <div class="sign-up"> <h2>OR</h2> </div>

                    </div>
                    <div class="header-social">
                        <a href="/Shop/LoginFacebook" class="face"><h5>Facebook</h5></a>
                        <a href="#" class="twitt"><h5>Twitter</h5></a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#login").click(function () {
            let username = $(".ip-text")[0].value;
            let password = $(".ip-password")[0].value;
            $.ajax({
                cache: false,
                type: "POST",
            
                url: "/Shop/Login",
                data: {

                    username: username,
                    password: password
                },
                success: function (res) {
                    if (res === "false")
                        alert("Đăng nhập thất bại")
                    else {
                        alert("Đăng nhập thành công")
                        $("#loadBody").html(res)
                    }
                }
            })
        })  
    })
</script>
