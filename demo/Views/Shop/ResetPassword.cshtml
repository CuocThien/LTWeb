
@{
    ViewBag.Title = "ResetPassword";
}

@model demo.Model.User

<div class="header">
    <div class="header-main">
        <h1><p>Reset Password</p></h1>
        <div class="header-top">
            <div class="header-left-top">

                <form action=#" method="post">
                    <span>User Name:</span>
                    <input type="text" class="ip-text" value="" name="username" />
                    @Html.ValidationMessageFor(m => m.Username)
                    <br /><br />
                    <span>Password:</span>
                    <input type="password" class="ip-password" value="" name="password" />
                    @Html.ValidationMessageFor(m => m.Password)

                    <br /><br />
                    <span>Confirm:</span>
                    <input type="password" class="ip-password" value="" name="confirm" />
                    @Html.ValidationMessageFor(m => m.Password)

                    <input type="submit" class="ip-submit" value="OK">
                </form>
            </div>
        </div>
    </div>
</div>

