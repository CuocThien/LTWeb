@using demo.Controllers;
@model PagedList.IPagedList<demo.Model.FeedBack>
@using PagedList.Mvc;
@using demo.Model;


@if (Model.Count > 0)
{
    <table class="table table-hover">
        <thead>
            <tr></tr>
            <tr>
                <th style="text-align: center;"></th>
                <th style="text-align: left;">Người dùng</th>
                <th style="text-align: left;">Nhận xét</th>
            </tr>
        </thead>
        @foreach (var pro in Model.ToList())
        {

            <tbody>
                <tr>
                    <td width="67px">
                        @{ string image = "";
                            var user = pro.Order.User;}
                        @{if (!(user.avatar is null))
                            {
                                byte[] imgBytes = user.avatar;
                                image = System.Text.Encoding.ASCII.GetString(imgBytes);
                            }
                        }
                        @Html.Image(image, "Alternate Text", "50", "50") &nbsp; &nbsp; &nbsp;



                    </td>
                    <td width="200px">@user.Name</td>
                    <td>@pro.FeedBack1</td>
                </tr>
            </tbody>

        }
    </table>
}
else
{
    <h2>Không có đánh giá nào!</h2>
}

