@model List<demo.Model.Product>
@using PagedList.Mvc;
@using demo.Model;
@using Newtonsoft.Json

@{
    ViewBag.Title = "Style";
}

@using demo.Controllers;
@{User user = Session["User"] as User; }
<div>
    <div class="home-Contact">
        <span>Contact us: <a href="tel:#0708033730">0708033730</a></span>
        <hr>
        <div class="Before-login">
            <span><a href="~/Shop/Register">ĐĂNG KÝ</a></span>
            <hr>
            <SPAN><a href="~/Shop/Login">ĐĂNG NHẬP</a></SPAN>
        </div>
    </div>
    <div class="home-Menu row">
        <div class="home-Menu-left col-lg-6">
            <ul class="nav navbar-nav center_nav pull-right">
                @{ if (user is null)
                    {
                        <li class="nav-item active" style="border-right:solid 2px black">
                            <a class="nav-link" href="~/Shop/HomeGuest">TRANG CHỦ</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item active" style="border-right:solid 2px black">
                            <a class="nav-link" href="~/Shop/Home">TRANG CHỦ</a>
                        </li>
                    }
                }
                <li class="nav-item submenu dropdown" style="border-right:solid 2px black">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">PHÂN LOẠI</a>
                    <ul class="dropdown-menu" role="menu">
                        <li class="nav-item">
                            <a class="nav-link" href="/Shop/Style?id=Đồng hồ nam">ĐỒNG HỒ NAM</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Shop/Style?id=Đồng hồ nữ">ĐỒNG HỒ NỮ</a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item submenu dropdown " style="border-right:solid 2px black">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">HÃNG</a>
                    <ul class="dropdown-menu">
                        <li class="nav-item">
                            <a class="nav-link" href="/Shop/Brand?id=Rolex">ROLEX</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Shop/Brand?id=Daniel Wellington">DW</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Shop/Brand?id=Casio">CASIO</a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Shop/Login">
                        <i class="glyphicon glyphicon-shopping-cart"></i>
                        Giỏ hàng
                    </a>
                </li>
            </ul>

        </div>
        <div class="home-Menu-right col-lg-6">

        </div>
    </div>
    <h2 style="text-align:center">
        ĐỒNG HỒ @Model.FirstOrDefault().Style.ToString().ToUpper()
    </h2>
    <div class="container-fluid">
        <div id="loadProduct" class="products row">
            @{
                string style = Model[0].Style.ToString();
            }
            @{Html.RenderAction("_Style", "Shop", new { page = 1, style });}


        </div>
        <ul class="pager">
            <li><a id="minpage">|<<</a></li>
            <li><a id="previous"><<</a></li>
            <li><a id="next">>></a></li>
            <li><a id="maxpage">>>|</a></li>
        </ul>
    </div>
</div>

<script>
    var currentpage = 1;
    var max = 0;
    var Style = '@Model.FirstOrDefault().Style.ToString()';

    $(document).ready(function () {

        $('#previous').click(function () {
                currentpage = currentpage - 1;
                if (currentpage <= 0)
                    currentpage=1
            $.ajax({
                type: "GET",
                url: "/Shop/_Style",
                data: {
                    page: currentpage,
                    style: Style

                },
                success: function (res) {
                    $('#loadProduct').html(res)
                }
            });
        });
           $('#next').click(function () {

            pagesize = 4;
            var max = 0;
            var size = (@Model.Count()) / pagesize;
            if ((@Model.Count()) % pagesize == 0) {
                max = (@Model.Count()) / pagesize;
            }
            else {
                max = Math.floor(((@Model.Count()) / pagesize) + 1);
            }
            currentpage = currentpage + 1;
            if (currentpage > max)
                currentpage = max;
            if (max == 1)
                currentpage = 1;
            $.ajax({
                type: "GET",
                url: "/Shop/_Style",
                data: {
                    page: currentpage,
                    style: Style
                },
                success: function (res) {
                    $('#loadProduct').html(res)
                }
            });
        });
        $('#minpage').click(function () {
            currentpage = 1
            $.ajax({
                type: "GET",
                url: "/Shop/_Style",
                data: {
                    page: currentpage,
                    style:Style

                },
                success: function (res) {
                    $('#loadProduct').html(res)
                }
            });
        });
        $('#maxpage').click(function () {
            pagesize = 4;
            var max = 0;
            var size = (@Model.Count()) / pagesize;
            if ((@Model.Count()) % pagesize == 0) {
                max = (@Model.Count()) / pagesize;
            }
            else {
                max = Math.floor(((@Model.Count()) / pagesize) + 1);
            }
            console.log(max);
            currentpage = max;
            $.ajax({
                type: "GET",
                url: "/Shop/_Style",
                data: {
                    page: currentpage,
                    style:Style

                },
                success: function (res) {
                    $('#loadProduct').html(res)
                }
            });
        });
    });

</script>

